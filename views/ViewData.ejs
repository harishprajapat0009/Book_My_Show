<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Page</title>
    <!-- Main-css -->
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <!-- Icon -->
    <link rel="stylesheet" href="/remix/remixicon.css" type="text/css">
    <!-- Fonts -->
    <link rel="stylesheet" href="/fonts/stylesheet.css" type="text/css">
</head>
<body>
    <%- include('Header') %>

    <div class="mainCard">
        <div class="container allDetails">
            <div class="bgImg">
                <img src="<%= singleObj.bgImage %>" alt="" height="500px">
            </div>
            <div class="d-flex align-center allData">
                <div class="cvImage">
                    <img src="<%= singleObj.coverImage %>" alt="" height="400px" width="280px">
                </div>
                <div class="movieData">
                    <h2><%= singleObj.title %></h2>
                    <p><%= singleObj.format %></p>
                    <p><%= singleObj.language %></p>
                    <ul class="d-flex details">
                        <li><%= singleObj.duration %></li>
                        <li><%= singleObj.genres %></li>
                        <li><%= singleObj.date %></li>
                    </ul>

                    <button>Book Tickets</button>
                </div>
            </div>
        </div>
    </div>

    <div class="description container">
        <h2>About the movie</h2>
        <p><%= singleObj.description %></p>
    </div>

    <div class="container addComments">
        <h2>Add a comment</h2>
        <form action="/addComment" method="post">
            <input type="text" name="comments" placeholder="Add Comments">
            <!-- Transfer Id -->
            <input type="hidden" name="id" value="<%= singleObj.id %>" >

            <input type="submit" name="submit" >
        </form>
    </div>

    <div class="container showComments">
        <h2>Comments</h2>
        <% singleObj.comments.map((v, i) => { %>
            <p><%= v %></p>
        <% }) %>
    </div>
</body>
</html>